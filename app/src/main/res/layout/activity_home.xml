<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wappster.fitbook.ui.home.HomeActivity">

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out" />

    <View
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_gradient_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="@dimen/margin_20"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_tabbar"
        android:gravity="center_vertical"
        android:weightSum="19">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            attrs:srcCompat="@drawable/logo_white"
            android:scaleType="centerInside"
            android:layout_weight="4"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginEnd="@dimen/margin_10"
            attrs:srcCompat="@drawable/circle_gray"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            attrs:srcCompat="@drawable/logo_white"
            android:scaleType="centerInside"
            android:layout_weight="4"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginEnd="@dimen/margin_10"
            attrs:srcCompat="@drawable/circle_gray"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            attrs:srcCompat="@drawable/logo_white"
            android:scaleType="centerInside"
            android:layout_weight="4"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginEnd="@dimen/margin_10"
            attrs:srcCompat="@drawable/circle_gray"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            attrs:srcCompat="@drawable/logo_white"
            android:scaleType="centerInside"
            android:layout_weight="4"
            android:layout_margin="10dp"/>

    </LinearLayout>



</RelativeLayout>
