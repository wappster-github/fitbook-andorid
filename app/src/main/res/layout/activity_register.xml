<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity"
    tools:ignore="MissingPrefix">


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/logo_white" />

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        tools:ignore="MissingPrefix">

        <TextView
            fontPath="fonts/Quicksand-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="welcome to "
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            fontPath="fonts/Quicksand-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fitbook"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleLayout"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_10"
        android:paddingEnd="@dimen/margin_20"
        android:paddingStart="@dimen/margin_20"
        android:paddingTop="@dimen/margin_10">

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:background="@drawable/background_edittext_stroked"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingEnd="@dimen/margin_20"
            android:paddingStart="@dimen/margin_20"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/edittext_text_size" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/background_edittext_stroked"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingEnd="@dimen/margin_20"
            android:paddingStart="@dimen/margin_20"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/edittext_text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/background_button_purple_light"
            android:text="Sign up"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/signUpButton"
            fontPath="fonts/Quicksand-Bold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            android:text="By signin up, you agree to our terms &amp; privacy policy"
            android:textAlignment="center"
            android:textColor="@color/gray" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_20">

        <TextView
            fontPath="fonts/Quicksand-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/signInButton"
            fontPath="fonts/Quicksand-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Sign in now"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>